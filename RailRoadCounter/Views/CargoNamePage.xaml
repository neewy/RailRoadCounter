<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="RailRoadCounter.CargoNamePage">
    <ContentPage.Content>

        <RelativeLayout>
            <SearchBar
				x:Name="Search"
				RelativeLayout.WidthConstraint =
      			"{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=1,
                             Constant=1}"

				RelativeLayout.HeightConstraint =
      			"{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0.10,
                             Constant=1}"
				Placeholder="Введите искомое значение" />

            <ActivityIndicator 
					IsRunning="true" 
					IsVisible="false" 
					x:Name="Loader"
				
					RelativeLayout.XConstraint =
      				"{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0.5,
                             Constant=1}"

					RelativeLayout.YConstraint =
      				"{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0.3,
                             Constant=1}"/>

            <ListView IsVisible="false" x:Name="CargoNamesList"
					RowHeight="100"
					ItemsSource="{Binding CargoList}"
					RelativeLayout.WidthConstraint =
      				"{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=1,
                             Constant=1}"

					RelativeLayout.HeightConstraint =
      				"{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0.9,
                             Constant=0}"
			
					RelativeLayout.YConstraint =
      				"{ConstraintExpression Type=RelativeToView,
							ElementName=Search,
                             Property=Height,
                             Factor=1,
                             Constant=10}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding Name}" Grid.ColumnSpan="4" Grid.Row="0" Grid.Column="0" />
                                <Label Text="Охраняемый" Grid.Row="1" Grid.Column="0" />
                                <Label Text="{Binding Guarded}" Grid.Row="1" Grid.Column="1" />
                                <Label Text="Опасный" Grid.Row="1" Grid.Column="2" />
                                <Label Text="{Binding Dangerous}" Grid.Row="1" Grid.Column="3" />
                                <Label Text="{Binding Code}" Grid.Row="2" Grid.Column="0" />
                            </Grid>
                            

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </RelativeLayout>

    </ContentPage.Content>
</ContentPage>
